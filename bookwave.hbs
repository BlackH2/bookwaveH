/* search bar code */

form{
    position: relative;
    top: 51px;
    left: 1200px;
    transform: translate(-50%,-50%);
    transition: all 1s;
    width: 50px;
    height: 50px;
    background: white;
    box-sizing: border-box;
    border-radius: 25px;
    border: 4px solid white;
    padding: 5px;
}

input{
    position: absolute;
    top: -4px;
    left: 0;
    width: 220px;
    height: 51.5px;
    line-height: 30px;
    outline: 0;
    border: 0;
    display: none;
    font-size: 1em;
    border-radius: 30px;
    padding: 0 20px;
}

.fa{
    box-sizing: border-box;
    padding: 10px;
    width: 42.5px;
    height: 42.5px;
    position: absolute;
    top: 0;
    right: 0px;
    border-radius: 50%;
    color: #07051a;
    text-align: center;
    font-size: 1.2em;
    transition: all 1s;
}

form:hover,
form:valid{
    width: 200px;
    cursor: pointer;
}

form:hover input,
form:valid input{
    display: block;
}

form:hover .fa,
form:valid .fa{
    background: #07051a;
    color: white;
    left:212px;
}

/* main body left + right */

.book_list_main_body{
    position: relative;
    display: inline-block;
    background-color: rgb(11, 10, 10);
    height: 100%;
    width: 100%;
}

/*body's left*/

.main_body_left{
    position: relative;
    display: inline-block;
    width: 50%;
    float: left;
}


/* book list */

.book_list{
    position: relative;
    display: grid;
    padding: 60px;
    gap: 20px;
    top: 44px;
}

/* books */
.books{
    padding-block: 7.5px;
}

/* book image */

.book_img{
    height: 100px;
    width: 70px;
    transform: scale(1.2); 
    border-radius: 5px;
    margin: 0px 7.5px 0px 0px;
}

/* book details */

.book_details{
    position: absolute;
    display: inline-block;
    background-color: rgb(27, 27, 27);
    width: 640px;
    height: 100px;
    padding: 2px 0px 0px 10px;
}

/* book details hover */

.book_details:hover{
    box-shadow: 1px 2px 20px rgba(36, 255, 16, 0.992);
}

/* book title */

.book_title{
    color: white;
    font-size: 20px;
    padding: 2px 0px 2px 2px ;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: 700;
}

/* book url pattern remove */

.url{
    color: white;
    text-decoration: none;
}

/* book size */

.book_size{
    color: rgb(0, 116, 0);
    font-size: 12px;
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    padding: 1px 0px 1px 2px;
}

/* book descripstion */

.book_description{
    color: rgb(190, 190, 190);
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    padding: 1px 0px 0px 2px;
}


/*body's right*/

.main_body_right{
